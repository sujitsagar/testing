
<% @nodeals = @alldeals - @deals %>
<% @deals = @nodeals %>


<h3> Not User Deals ( <%= @deals.length %> ) </h3>
<br/>
<% len = @deals.length %>
<% nlen = len/3 + 1 %>
<table cellspacing="4" border="0" cellpadding="10" align="center">
<% for n in 1..nlen %>
