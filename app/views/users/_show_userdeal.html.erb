<% group = @deals[3*n-3] %>
<% if !group.nil? %>
<%= image_tag( group.image , :alt => "Group Image", :border => 1 ,:width =>70, :height => 90 ) %>
<br/>

<b style='font-size:10px;'><%= link_to group.name, group %></b><br/>
<b style='font-size:10px;'><%= pluralize( group.attendances.count, " Liker" ) %></b>
<% end %>
