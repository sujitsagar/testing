<%= form_for(@subgroup) do |f| %>
 <%= render 'shared/error_messages' ,:object => f.object %>
 <% @cities = Maingroup.all %>
 <% cou = @cities.count %>
 <% arr = Array.new(cou) { Array.new(2) } %>
 <% for n in 1..cou %>
 <% arr[n-1][0] = @cities[n-1].maingroup %>
 <% arr[n-1][1] = n %>
 <% end %>
 <% arr %>
<br/><br/><br/><br/><br/>
<div class="field">
  <table border="1" width="400" align="center">
  <TR><TD>
    <%= f.label :maingroup %></td><td>
    <%= f.select(:maingroup_id, arr ) %></TD></TR>
 <TR><TD>
    Type </td><td>
    <%= f.text_field :cate1 %></TD></TR>
  <TR><TD>
    <%= f.label :cate2 %></td><td>
    <%= f.text_field :cate2 %></TD></TR>
  </table> 
<div class="actions">
<%= f.submit "Create" %>
</div>

<% end %>